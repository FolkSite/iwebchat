
.dj-tab {
  height: 45px;
}
.dj-tab__bd {
  width: 750rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #e5e5e5;
  background: #fff;
}
.dj-tab__bd--fixed {
  position: fixed;
  top: 0;
  z-index: 2;
}
.dj-tab__item {
  flex: 1;
  display: inline-block;
  padding: 0 10px;
  line-height: 0;
  box-sizing: border-box;
  overflow: hidden;
  text-align: center;
}

.dj-tab__title {
  display: inline-block;
  max-width: 100%;
  height: 44px;
  line-height: 44px;
  overflow: hidden;
  text-overflow: ellipsis;
  box-sizing: border-box;
  word-break: keep-all;
  font-size: 14px;
  color: #666;
}

.dj-tab__item--selected .dj-tab__title {
  color: #f44;
  border-bottom: 2px solid #f44;
}

.dj-tab__bd--scroll {
  display: block;
  white-space: nowrap;
}
.dj-tab__bd--scroll .dj-tab__item {
  min-width: 80px;
}
